<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">?dialogPreferredPadding</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>
