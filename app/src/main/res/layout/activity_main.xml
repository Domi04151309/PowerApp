<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleCentered="true"
            app:menu="@menu/top_app_bar" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="?dialogPreferredPadding">

            <Button
                android:id="@+id/shutdown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame"
                android:drawableStart="@drawable/ic_round_shutdown"
                android:text="@string/Shutdown" />

            <Button
                android:id="@+id/reboot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame"
                android:drawableStart="@drawable/ic_round_reboot"
                android:text="@string/Reboot" />

            <Button
                android:id="@+id/safemode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame"
                android:drawableStart="@drawable/ic_round_safe_mode"
                android:text="@string/SafeMode" />

            <Button
                android:id="@+id/recovery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame"
                android:drawableStart="@drawable/ic_round_recovery"
                android:text="@string/Recovery" />

            <Button
                android:id="@+id/bootloader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame"
                android:drawableStart="@drawable/ic_round_bootloader"
                android:text="@string/Bootloader" />

            <Button
                android:id="@+id/edl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame"
                android:drawableStart="@drawable/ic_round_edl"
                android:text="@string/EDL" />

            <Button
                android:id="@+id/soft_reboot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame"
                android:drawableStart="@drawable/ic_round_soft_reboot"
                android:text="@string/SoftReboot" />

            <Button
                android:id="@+id/system_ui"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame"
                android:drawableStart="@drawable/ic_round_restart_system_ui"
                android:text="@string/SystemUI" />

            <Button
                android:id="@+id/screen_off"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame"
                android:drawableStart="@drawable/ic_round_screen_off"
                android:text="@string/ScreenOff" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/full_padding"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/root"
        android:text="@string/root"
        app:icon="@drawable/ic_tag" />
</RelativeLayout>